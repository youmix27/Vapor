@using POCSQLCO.Models
@inject ISnackbar Snackbar
@inject Models.IVaporService VaporService
@rendermode InteractiveServer

<EditForm Model=@genre OnValidSubmit="Update">
<DataAnnotationsValidator />
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Modifier Genre
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="genre.Id" Label="genre Id" ReadOnly="true" />
        <MudTextField @bind-Value="genre.Libelle" For="@(() => genre.Libelle)" Label="Genre Libelle" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Annuler</MudButton>
        <MudButton ButtonType="ButtonType.Submit"  Color="Color.Primary">Modifier</MudButton>
    </DialogActions>
</MudDialog>
</EditForm>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public Genre genre { get; set; } = new Genre();
    protected string libelle { get; set; }

    protected override void OnInitialized()
    {
        libelle = genre.Libelle;
    }

    private void Cancel()
    {
        genre.Libelle = libelle;
        MudDialog.Cancel();
    }

    private void Update(EditContext context)
    {
        VaporService.UpdateGenre(genre);
        Snackbar.Add("genre modifié", Severity.Success);
        MudDialog.Close(DialogResult.Ok(genre.Id));
    }

}