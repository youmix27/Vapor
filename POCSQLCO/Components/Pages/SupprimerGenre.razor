@using POCSQLCO.Models
@inject ISnackbar Snackbar
@inject Models.IVaporService VaporService
@rendermode InteractiveServer

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Supprimer Genre ?
        </MudText>
    </TitleContent>
    <DialogContent>
        Êtes-vous sûr de vouloir supprimer ce genre ?
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Annuler</MudButton>
        <MudButton Color="Color.Warning" OnClick="Supprimer">Supprimer</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public Genre genre { get; set; } = new Genre();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void Supprimer()
    {
        //In a real world scenario this bool would probably be a service to delete the item from api/database
        VaporService.DeleteGenre(genre);
        Snackbar.Add("genre supprimé", Severity.Warning);
        MudDialog.Close(DialogResult.Ok(genre.Id));
    }
}